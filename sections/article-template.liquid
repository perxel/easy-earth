<div class="section-header">
  <h2 class="article__title">{{ blog.title }}</h2>
  <a href="{{ blog.url }}" class="return-link" title="BACK">
    <span>BACK</span>
  </a>
  {% if section.settings.blog_show_author %}
    <span class="article__author">{{ 'blogs.article.by_author' | t: author: article.author }}</span>
  {% endif %}

  {% if section.settings.blog_show_date %}
    <span class="article__date">
      {{ article.published_at | time_tag: format: 'date' }}
    </span>
  {% endif %}
</div>

<div class="main__content rte">

  <div class="ee-article__top">
    <h1>{{ article.title }}</h1>

    {% if article.excerpt %}
    <div class="ee-article__excerpt">
      {{ article.excerpt }}
    </div>
    {% endif %}

    {% if article.image %}
      {% capture img_id %}ArticleImage-{{ article.image.id }}{% endcapture %}
      {% capture img_wrapper_id %}ArticleImageWrapper-{{ article.image.id }}{% endcapture %}
      {%- assign img_url = article.image | img_url: '1x1' | replace: '_1x1.', '_{width}x.' -%}

      <div id="{{ img_wrapper_id }}" class="ee-article__image">
        <img id="{{ img_id }}"
             class="ee-article__img"
             src="{{ article.image | img_url: 'original' }}"
             alt="">
      </div>
    {% endif %}
  </div>

  <div class="ee-content">
    {% if section.settings.show_share_buttons %}
      {% include 'social-sharing', share_title: article.title, share_permalink: article.url, share_image: article.image %}
    {% endif %}

    <div class="ee-content__article">
      {{ article.content }}
    </div>
  </div>

  {% if blog.articles_count > 1 %}

    <div class="ee-related-blog">

      <h2 class="ee-related-blog___heading">Related Blog</h2>

      {% assign current_article = article.handle %}

      {% paginate blog.articles by 3 %}

        <ul class="ee-blog__grid">
          {% for article in blog.articles %}
            {% if current_article != article.handle %}
              <li class="ee-grid__item {% if article.image %} article--has-image{% endif %}">
                <a href="{{ article.url }}" class="article__link">
                  {% if article.image %}
                    {% capture img_id %}ArticleImage-{{ article.image.id }}{% endcapture %}
                    {% capture img_wrapper_id %}ArticleImageWrapper-{{ article.image.id }}{% endcapture %}
                    {%- assign img_url = article.image | img_url: '1x1' | replace: '_1x1.', '_{width}x.' -%}

                    <div id="{{ img_wrapper_id }}" class="article__grid-image-wrapper">
                      <div class="article__grid-image-container">
                        <img id="{{ img_id }}"
                             class="article__grid-image lazyload"
                             src="{{ article.image | img_url: 'original' }}"
                             alt="{{ article.title }}">
                      </div>
                    </div>
                  {% endif %}
                </a>

                <div class="article__info">
                  <h3 class="article__title h3">
                    {{ article.title | escape }}
                  </h3>

                  {% if section.settings.blog_show_author %}
                    <span class="article__author">{{ 'blogs.article.by_author' | t: author: article.author }}</span>
                  {% endif %}

                  {% if section.settings.blog_show_date %}
                    <span class="article__date">
                      {{ article.published_at | date: "%d.%m.%Y" }}
                    </span>
                  {% endif %}

                  <div class="article__grid-meta{% if article.image %} article__grid-meta--has-image{% endif %}">
                    <ul class="list--inline article__meta-buttons">
                      <li>
                        <a href="{{ article.url }}" class="btn btn--tertiary btn--small" aria-label="{{ 'blogs.article.read_more_title' | t: title: article.title }}">
                          {{ 'blogs.article.read_more' | t }}
                        </a>
                      </li>
                    </ul>
                  </div>
                </div>
              </li>
            {% endif %}
          {% endfor %}
        </ul>

      {% endpaginate %}

      <a href="{{ blog.url }}" class="ee-related-blog__btn" title="VIEW ALL BLOGS">
        VIEW ALL BLOGS
      </a>

    </div>

  {% endif %}

</div>



