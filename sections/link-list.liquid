{% if section.settings.custom_linklist %}
<ul class="custom-linklist">
    {% for link in linklists[section.settings.custom_linklist].links %}
    <li {% if link.active %}class="active {% if link.child_active %}child-active{% endif %}"{% endif %}>
        <a href="{{ link.url }}">{{ link.title }}</a>
    </li>
    {% endfor %}
</ul>
{% endif %}


