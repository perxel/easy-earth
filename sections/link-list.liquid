{% if section.settings.custom_linklist %}
    <div class="ee-bottom-nav-wrapper ee-container">
        <ul class="ee-bottom-nav">
            {% for link in linklists[section.settings.custom_linklist].links %}
                <li {% if link.active %}class="active {% if link.child_active %}child-active{% endif %}"{% endif %}>
                    <a href="{{ link.url }}">{{ link.title }}</a>
                </li>
            {% endfor %}
        </ul>
        <select class="ee-bottom-nav--mobile hidden" onchange="if (this.value) window.location.href=this.value">
            {% for link in linklists[section.settings.custom_linklist].links %}
                <option {% if link.active %}selected{% endif %} value="{{ link.url }}">
                    {{ link.title }}
                </option>
            {% endfor %}
        </select>
    </div>
{% endif %}


{% schema %}
    {
        "name": "Link List",
        "settings": [
            {
            "type": "link_list",
            "id": "custom_linklist",
            "label": "Menu"
            }
        ]
    }
{% endschema %}